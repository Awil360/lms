pipeline {
    agent any

    environment {
        // Define Docker image name and Docker Hub credentials
        DOCKER_IMAGE = 'awil360/lms-fnd'
        DOCKER_CREDENTIALS_ID = 'lms-docker'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'dev', url: 'https://github.com/Awil360/lms.git'
            }
        }
        
        stage('Read Version') {
            steps {
                script {
                    def packageJson = readFile('webapp/package.json')
                    def json = readJSON text: packageJson
                    env.VERSION = json.version
                    env.IMAGE_TAG = "${DOCKER_IMAGE}:${env.VERSION}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('awil360/lms-front:2.2',"-f webapp/Dockerfile .")
                }
            }
        }   
    }
}
